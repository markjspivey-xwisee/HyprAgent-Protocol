# ============================================
# HyprCAT Platform Configuration
# ============================================
# Copy this file to .env and customize as needed.
# Docker Compose uses these values directly.
# For local dev, the server reads them from process.env.

# --- Gateway Server ---
PORT=3001
HOST=0.0.0.0
BASE_URL=http://localhost:3001
NODE_ENV=development

# --- Storage ---
# "memory" (default, lost on restart) or "file" (persistent JSON)
STORAGE_BACKEND=file
STORAGE_DIR=./data

# --- Security ---
# Secret for signing JWT tokens. CHANGE THIS in production!
JWT_SECRET=change-me-in-production
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# --- CORS ---
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# --- Logging ---
ENABLE_LOGGING=true
LOG_LEVEL=info

# --- Frontend (Vite) ---
# Leave empty when using Docker (nginx proxies /api â†’ server).
# Set this only for standalone dev or when the gateway is on a different host.
VITE_GATEWAY_URL=http://localhost:3001

# --- Docker Compose Ports ---
SERVER_PORT=3001
WEB_PORT=80
